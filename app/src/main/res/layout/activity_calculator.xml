<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentLeft="true"
    android:background="@color/colorBlack"
    tools:context=".Calculator">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
        <EditText
        android:id="@+id/et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:textSize="35dp"
            android:textColor="#fff"
        />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="«"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="C"
            android:textSize="25sp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="+"
            android:textSize="25sp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="-"
            android:textSize="25sp" />
    </TableRow>
    <TableRow
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <Button
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="X"
            android:textSize="25sp" />


</TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="÷"
            android:textSize="25sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="="
            android:textSize="25sp" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="."
            android:textSize="25sp" />

        <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="0"
            android:textSize="25sp" />

        <Button
            android:id="@+id/plusMinu"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="#94BDFF"
            android:text="±"
            android:textSize="25sp" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/orangeendcolor"
            android:text="off"
            android:textSize="25sp" />

    </TableRow>
    </TableLayout>